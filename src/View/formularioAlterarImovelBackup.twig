{% extends "telaAdministrador.twig"%}

{% block conteudoCentral %}
    <link href="css/estiloADM.css" rel="stylesheet" type="text/css"/>

    <div class="formulario">
        <h1><center> Bem Vindo ao Formulário de Alteração de Imovéis </center></h1>
        <form  class="form-group center-block text-center" id="formAlterarImovel" enctype="multipart/form-data">
            {% for imoveis in imoveis  %}       

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Id deste Imovel:   </span>
                    </div>
                    <input type="text" name="id" class="form-control" readonly="true" value="{{imoveis.id}}"/>
                </div>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">tipoImovel:   </span>
                    </div>
                    <input type="text" name="tipoImovel" class="form-control" value="{{imoveis.tipoImovel}}"/>
                </div>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">tipoNegocio:    </span>
                    </div>
                    <input type="text" name="tipoNegocio" class="form-control" value="{{imoveis.tipoNegocio}}"/>
                </div>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Título do Imovel:    </span>
                    </div>
                    <input type="text" name="titulo" class="form-control" value="{{imoveis.titulo}}"/>
                </div>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Descrição do Anuncio:    </span>
                    </div>
                    <input type="text" name="descricao" class="form-control" value="{{imoveis.descricao}}"/>
                </div>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Suas imagens enviadas são:    </span>
                    </div>
                    <input type="text" name="imagem" class="form-control"  readonly="true" value="{{imoveis.imagem1}}"/>
                </div>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Suas imagens enviadas são:   </span>
                    </div>
                    <input type="text" name="imagem2" class="form-control"  readonly="true" value="{{imoveis.imagem2}}"/>
                </div>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Suas imagens enviadas são:    </span>
                    </div>
                    <input type="text" name="imagem3" class="form-control"  readonly="true" value="{{imoveis.imagem3}}"/>
                </div>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Suas imagens enviadas são:   </span>
                    </div>
                    <input type="text" name="imagem4" class="form-control"  readonly="true" value="{{imoveis.imagem4}}"/>
                </div>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Suas imagens enviadas são:    </span>
                    </div>
                    <input type="text" name="imagem5" class="form-control"  readonly="true" value="{{imoveis.imagem5}}"/>
                </div>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Endereço:    </span>
                    </div>
                    <input type="text" name="endereco" class="form-control" value="{{imoveis.endereco}}"/>
                </div>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Bairro:    </span>
                    </div>
                    <input type="text" name="bairro" class="form-control" value="{{imoveis.bairro}}"/>
                </div>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Cidade:    </span>
                    </div>
                    <input type="text" name="cidade" class="form-control" value="{{imoveis.cidade}}"/>
                </div>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Contato:    </span>
                    </div>
                    <input type="text" name="contato" class="form-control" value="{{imoveis.contato}}"/>
                </div>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Quantidade de Comodos:    </span>
                    </div>
                    <input type="text" name="qntcomodos" class="form-control" value="{{imoveis.qntcomodos}}"/>
                </div>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Quantidade de Quartos:    </span>
                    </div>
                    <input type="text" name="qntquartos" class="form-control" value="{{imoveis.qntquartos}}"/>
                </div>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Valor Aluguel:    </span>
