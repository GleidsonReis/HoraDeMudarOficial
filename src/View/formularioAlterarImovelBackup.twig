                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Data Expiração do Anuncio:    </span>
                    </div>
                    <input type="datetime-local" name="dataExpiracao" class="form-control" value="{{imoveis.dataExpiracao}}"/>
                </div>

                <div class="">  
                    <button type="submit" class="btn btn-success">Alterar</button>
                </div>
            {% endfor %}
        </form>
    </div>
    <div id="div_retorno">

    </div>
    <div id="processando" style="display: none;">
        <img src="img/ajax-loader.gif" />
    </div>

{% endblock %}
