{% extends "paginaPrincipal.twig"%}

{% block conteudoCentral %}
    <link href="css/estiloADM.css" rel="stylesheet" type="text/css"/>

    <div class="formulario">
        <h1><center> Bem Vindo a Tela de Cadastro de Imovéis </center></h1>
        <form  class="form-group center-block text-center" id="formCadastroImovel">
           
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">tipoImovel:   </span>
                </div>
                <input type="text" name="tipoImovel" class="form-control"/>
            </div>

            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">tipoNegocio:    </span>
                </div>
                <input type="text" name="tipoNegocio" class="form-control"/>
            </div>

            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Título do Imovel:    </span>
                </div>
                <input type="text" name="titulo" class="form-control"/>
            </div>

            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Descrição do Anuncio:    </span>
                </div>
                <input type="text" name="descricao" class="form-control"/>
            </div>
            
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Escolha sua Imagem:    </span>
                </div>
                <input type="file" name="imagem1" class="form-control"/>
            </div>

            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Endereço:    </span>
                </div>
                <input type="text" name="endereco" class="form-control"/>
            </div>
            
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Bairro:    </span>
                </div>
                <input type="text" name="bairro" class="form-control"/>
            </div>
            
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Cidade:    </span>
                </div>
                <input type="text" name="cidade" class="form-control"/>
            </div>
            
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Contato:    </span>
                </div>
                <input type="text" name="contato" class="form-control"/>
            </div>
            
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Quantidade de Comodos:    </span>
                </div>
                <input type="text" name="qntcomodos" class="form-control"/>
            </div>
            
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Quantidade de Quartos:    </span>
                </div>
                <input type="text" name="qntquartos" class="form-control"/>
            </div>
            
             <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Valor Aluguel:    </span>
                </div>
                <input type="text" name="valor" class="form-control"/>
            </div>
                  
            <div class="">  
                <button type="submit" class="btn btn-success">Cadastrar</button>
            </div>

        </form>
    </div>
    <div id="div_retorno">

    </div>
    <div id="processando" style="display: none;">
        <img src="img/ajax-loader.gif" />
    </div>

{% endblock %}
